<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/recipeBack"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/field_back" />

    <TextView
        android:id="@+id/recipeName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="25dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="20sp"
        android:text="TextView"
        android:textColor="@color/white"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipeName"


        app:layout_constraintBottom_toBottomOf="@+id/recipeBack"
        app:layout_constraintEnd_toEndOf="@+id/recipeBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/recipeIngredients"
            android:layout_width="120dp"
            android:layout_height="match_parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"

            android:ellipsize="end"

            android:gravity="start"
            android:maxLines="8"
            android:text="TextView gf gh gfh"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/recipeAnnounce"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="10dp"
            android:gravity="fill"

            android:ellipsize="end"
            android:maxLines="6"
            android:text="TextView gbg b f fbf b fb fb fb fb fb fbfb fb fb fb fb fb fb fb fb fb fb fb fb fb fb fb fb fb fb fb gh g g gh gh gh gh gh gh gh gh ghg h gh gh gh gh gh gh g hg gh g h gh g hg h g h gh gh gh g hg hg hgh gh gh gh gh gh gh"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>